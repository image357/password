@PACKAGE_INIT@

# setup tasks
include(GNUInstallDirs)
check_required_components(@CMAKE_PROJECT_NAME@)

# export self build library
add_library(@CMAKE_PROJECT_NAME@::@LIB_NAME@ SHARED IMPORTED)
set_property(
        TARGET @CMAKE_PROJECT_NAME@::@LIB_NAME@ PROPERTY
        IMPORTED_LOCATION "${CMAKE_CURRENT_LIST_DIR}/../../@CMAKE_PROJECT_NAME@-@CMAKE_PROJECT_VERSION@/@DLL_FILE@"
)

if (@WIN32@)
    set_property(
            TARGET @CMAKE_PROJECT_NAME@::@LIB_NAME@ PROPERTY
            IMPORTED_IMPLIB "${CMAKE_CURRENT_LIST_DIR}/../../@CMAKE_PROJECT_NAME@-@CMAKE_PROJECT_VERSION@/@LIB_FILE@"
    )
endif ()

target_include_directories(
        @CMAKE_PROJECT_NAME@::@LIB_NAME@ INTERFACE
        "${CMAKE_CURRENT_LIST_DIR}/../../../@CMAKE_INSTALL_INCLUDEDIR@/@CMAKE_PROJECT_NAME@-@CMAKE_PROJECT_VERSION@"
)

set(@CMAKE_PROJECT_NAME@_DLL_FILE "${CMAKE_CURRENT_LIST_DIR}/../../@CMAKE_PROJECT_NAME@-@CMAKE_PROJECT_VERSION@/@DLL_FILE@")

# message success
message(STATUS "Found @CMAKE_PROJECT_NAME@: ${CMAKE_CURRENT_LIST_FILE} (found version \"@CMAKE_PROJECT_VERSION@\")")
